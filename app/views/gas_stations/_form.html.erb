<%= form_with(model: gas_station) do |form| %>
  <% if gas_station.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(gas_station.errors.count, "erros") %> foram detectados:</h2>

      <ul>
        <% gas_station.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :address, style: "display: block" %>
    <%= form.text_field :address %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
